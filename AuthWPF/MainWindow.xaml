<Window x:Class="AuthWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" Width="200px" Height="190px">
        <Button x:Name="ToRegister" Content="Регистрация"  Margin="5" Width="80" Height="50px" HorizontalAlignment="Left" Background="#FFFF5454" Foreground="#FF0089FF" BorderBrush="White" Click="ToRegister_Click" />
        <Button x:Name="ToLogin" Content="Войти"  Margin="5" Width="80" Height="50px" HorizontalAlignment="Right" Background="#FF00B0FF" BorderBrush="#FFFEFEFE" Foreground="Red" Click="ToLogin_Click" />
    </Grid>
</Window>
